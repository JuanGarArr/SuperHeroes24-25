<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.SuperHeroesActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hero_id_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hero_name_1"
            android:layout_marginLeft="28dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout2"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/hero_id_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hero_name_2"
            android:layout_marginLeft="28dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout3"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/hero_id_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hero_name_3"
            android:layout_marginLeft="28dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/hero_id_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hero_name_4"
            android:layout_marginLeft="28dp"/>

    </LinearLayout>

</LinearLayout>
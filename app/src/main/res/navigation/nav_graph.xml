<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/superheroes_fragment">



    <fragment
        android:id="@+id/superheroes_fragment"
        android:name="com.example.superheroes24.presentation.SuperHeroesFragment"
        tools:layout="@layout/fragment_superheroes">

        <action
            android:id="@+id/superheroes_fragment_to_superhero_fragment_detail"
            app:destination="@id/superhero_detail_fragment"/>

    </fragment>


    <fragment
        android:id="@+id/superhero_detail_fragment"
        android:name="com.example.superheroes24.presentation.SuperHeroDetailFragment"
        tools:layout="@layout/fragment_superhero_detail">

        <argument
            android:name="superHeroId"
            app:argType="string" />

        <action
            android:id="@+id/superheroes_fragment_detail_to_superhero_fragment"
            app:destination="@id/superheroes_fragment"/>

    </fragment>

</navigation>